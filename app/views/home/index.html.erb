<div class="home_content">
	<h1>Eximius Studio</h1>

	<% post = Post.find(1) %>
  <div>
    <h3><%= post.title %></h3>
    <p><%= post.date %></p>
    <% if !post.image_url(:show).to_s.blank? %>
      <p><%= image_tag post.image_url(:show).to_s %></p>
    <% end %>
    <p><%= post.content %></p>
  </div>

</div>