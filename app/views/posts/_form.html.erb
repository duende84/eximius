<div class="row">
  <div class="span6">
    <%= form_for(@post) do |f| %>
      <%= render 'error_messages' %>
      <div class="field">
        <%= f.label :title, 'Titulo', :class => "label_form" %><br />
        <%= f.text_field :title, :class => "text_field_form" %>
      </div>
      <div class="field">
        <%= f.label :content, 'Contenido', :class => "label_form"  %><br />
        <%= f.text_area :content, :class => "text_field_form", :size => "50x10"  %>
      </div>
      <div class="field">
        <%= f.label :date, 'Fecha de publicacion', :class => "label_form" %><br />
        <%= f.datepicker :date, :class => "text_field_form" %>
      </div>
      <div class="actions">
        <%= f.submit "Guardar", class: "btn btn-primary btn_form"%>
      </div>
    <% end %>
  </div>
</div>