<div id="reg_form" class="bg_form">
  <h1>Blog Eximius</h1>

  <% @posts.each do |post| %>
    <hr>
    <div>
      <h3><%= post.title %></h3>
      <p><%= post.date %></p>
      <% if !post.image_url(:thumb).to_s.blank? %>
        <p><%= image_tag post.image_url(:thumb).to_s %></p>
      <% end %>
      <p><%= post.content %></p>
      <p><%= link_to 'Mostrar', post %>
        <% if can? :update, @post %>
        - <%= link_to 'Editar', edit_post_path(post) %>
        <% end %>
        <% if can? :destroy, @post %>
        - <%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %>
        <% end %>
      </p>
    </div>
  <% end %>

  <hr>
  <%= link_to 'Nuevo Post', new_post_path %>
</div>